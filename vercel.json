{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": { "includeFiles": ["**/*.ts"] }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.ts"
    }
  ],
  "build": {
    "env": {
      "DATABASE_URL": "your-database-url"
    },
    "commands": ["npm install", "npm run build", "npx prisma generate"]
  }
}
